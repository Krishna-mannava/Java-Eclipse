
public class Main
{
    
	public static void printTriagle(char []ch,int n)
	{
	    int k=0;
		for (int i=0; i<n; i++)
		{

			for (int j=n-i; j>1; j--)
			{
				// printing spaces
				System.out.print(" ");
			}

			for (int j=0; j<=i; j++ )
			{ 
			    String s=Character.toString(ch[k]);
				System.out.print(s+" ");
				
			}
			k+=1;

			System.out.println();
		}
	}

	public static void main(String args[])
	{
	    String s="Krishna";
		int n = s.length();
		char []ch=s.toCharArray();
		printTriagle(ch,n);
	}
}
